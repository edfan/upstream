<center>
<div class="media">
  <div class="media-left">
    <a href="#">
      <img class="media-object" src="..." alt="...">
    </a>
  </div>
  <div class="media-body">
    <h2 class="media-heading"><%= @user.name %></h2>
    Customizable description body?
  </div>
</div>
</center>
    
<% if !@userStream["stream"]%>
  <p><a href="http://www.twitch.tv/<%= @user.name %> " target = "_blank">Twitch stream (offline)</a></p>
<% else %>
  <iframe height="378" width="620" frameborder="0" scrolling="no" src="http://www.twitch.tv/<%= @user.name %>/embed"></iframe>
<% end %>

<div class='jumbotron'>
    <div class="container">
    <div class="col-md-1" id='midJumbo'>
    <ul class="nav nav-pills nav-stacked">
        <li role="presentation" class="active"><a href="#">List</a></li>
        <li role="presentation" class="inactive"><a href="#">Calendar</a></li>
        <li role="presentation" class="inactive"><a href="#">Following</a></li>
        <li role="presentation" class="inactive"><a href="#">Followers</a></li>
        <li role="presentation" class="inactive"><a href="#">Settings</a></li>
    </ul>
    </div>
        <div class="col-md-2" id='midJumbo'></div>
        <center>
    <div class="col-md-6" id='midJumbo'>
<div id='UserStreams'>
  <p style="text-decoration: underline">Upcoming streams</p>
  <table class='table table-bordered' id='UserStreamsTable'>

    <tr>
      <th>Start time</th>
      <th>End time</th>
      <th>Title</th>
      <th>Game</th>
      <th>Full description</th>
    </tr>
    
    <% @streams.each do |stream| %>

    <tr>
      <td><%= stream.starttime.strftime("%b %d, %I:%M %p") %></td>
      <td><%= stream.endtime.strftime("%b %d, %I:%M %p") %></td>
      <td><%= stream.title %></td>
      <td><%= stream.game %></td>
      <td><%= link_to "More...", user_stream_path(stream.user, stream) %></td>
    </tr>
    <% end %>
  </table>
</div>
    </div>
            <div class="col-md-3" id='midJumbo'></div>
    </div>
</div>
    </center>
<br><br>
<% if @user.name == session[:name] %>
<%= link_to "New scheduled stream", new_user_stream_path(@user) %>
<% end %>
