<h3><%= @stream.title %></h3>

<p>Streamer: <%= @user.name %></p>
<p>Game: <%= @stream.game %></p>
<p>Time: <%= @stream.start.strftime("%B %d, %I:%M %p") %></p>
<p>Description: <%= @stream.description %></p>

<% if @user.name == session[:name] %>
<%= link_to "Edit stream", edit_user_stream_path(@user, @stream) %> |
<%= link_to "Delete stream", [@user, @stream], :method => :delete %>
<% end %>
<br>
<%= link_to "Back", user_path(@user) %>
