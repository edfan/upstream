<h3>New Scheduled Stream</h3>

<%= form_for ([@user, @user.streams.build]) do |f| %>


<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :game %><br>
  <%= f.hidden_field :game, class: 'select2 ajax', style: 'width: 20%',
      data: { source: search_game_names_path, placeholder: 'Search for a game' } %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>

<p>
  <%= f.label "Start time" %><br>
  <%= f.datetime_select :starttime %>
</p>

<p>
  <%= f.label "End time" %><br>
  <%= f.datetime_select :endtime %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>
<%= link_to 'Back', url_for(@user) %>
