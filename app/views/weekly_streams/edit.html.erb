<h3>Edit Scheduled Stream</h3>

<%= form_for :stream, url: user_stream_path(@user, @stream), method: :patch do |f| %>


<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :game %><br>
  <%= f.text_field :game %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>

<p>
  <%= f.label "Start time" %><br>
  <%= f.datetime_select :starttime %>
</p>

<p>
  <%= f.label "End time" %><br>
  <%= f.datetime_select :endtime %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>
<%= link_to 'Back', url_for(@user) %>
